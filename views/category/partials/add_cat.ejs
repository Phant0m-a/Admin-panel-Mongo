<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="add-cat" tabindex="-1" aria-labelledby="add-cat" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="add-cat-form" action="/api/category/" method="post">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" name='title' required id="title"
                            aria-describedby="title">

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="add-cat-form" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>