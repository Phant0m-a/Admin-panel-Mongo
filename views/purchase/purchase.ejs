<%-include('../partials/global/navbar')%>
<div id="layoutSidenav">
    <%-include('../partials/global/sidebar')%>

    <div id="layoutSidenav_content">
        <main>

            <div class="container mt-3">
                <table id="datatablesSimple">
                    <thead>
                        <tr class="text-center">
                            <th>Id</th>
                            <th>User Email</th>
                            <th>User Name</th>
                            <th>Total Purchases</th>
                            <th>Actions</th>
                            


                        </tr>
                    </thead>
                    <tfoot>
                        <tr class="text-center">
                            <th>Id</th>
                            <th>User Email</th>
                            <th>User Name</th>
                            <th>Total Purchases</th>
                            <th>Actions</th>
                       
                        </tr>
                    </tfoot>
                    <tbody>
                        <% users.map((user,index)=>{ %>
                        <tr class="text-center">
                            <td><%=user._id%></td>
                            <td><%=user.email%></td>
                            <td><%=user.name%></td>
                            <td><%=user.purchases.length%></td>
                            <td> <button data-bs-toggle="modal" data-bs-target="#purchase<%=index%>"
                                class="btn btn-secondary btn-sm m-1">Purchase</button></td>

                        </tr>
                        
         <%- include('partials/purchase_show_partial',{user:user,index: index }) %>

                        <%  })%>

                    </tbody>
                </table>
            </div>
        </main>


    </div>

</div>
