   <!--  -->
   <div class="modal fade" id="purchase<%=index%>" tabindex="-1" aria-labelledby="add-cat"
    aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">User Purchases</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
         
                    <% user.purchases.map((item, i)=>{ %>
            <!-- accordion start -->
                        <div class="accordion" id="accordionExample">
                            <div class="accordion-item">
                            <h2 class="accordion-header" id="heading<%=i%>">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=i%>" aria-expanded="true" aria-controls="collapseOne">
                               <%=item._id%>
                                </button>
                            </h2>
                            <div id="collapse<%=i%>" class="accordion-collapse collapse " aria-labelledby="heading<%=i%>" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    
                                      
                                        <% item.products.map((doc,i)=>{ %>

                                   <div class="border text-muted" style="margin:10px;padding:10px">
                                  
                                        
                                          <div style="  display: grid;
                                          grid-template-columns: auto auto auto auto;
                                          gap: 5px;
                                          background-color: #eaeef1;
                                          padding: 2px;">
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;">Id</div>
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;">Course</div>
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;">Category</div>  
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;">Price</div>
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;"><%=doc._id%></div>
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;"><%=doc.course.title%></div>  
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;"><%=doc.category.title%></div>
                                            <div style="  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 18px;
  text-align: center;"><%=doc.price%></div> 
                                          </div>
                                       
                                          
                                     
                                   </div>
                                        <%})%>
                                  
                        
                                </div>
                            </div>
                        </div>

                      </div>
                <% }) %>
            </div>

           <!-- accordion end -->
                     


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                    data-bs-dismiss="modal">Cancel</button>
               
            </div>
        </div>
    </div>
</div>
