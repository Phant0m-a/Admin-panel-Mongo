<%- include('../partials/global/navbar.ejs')%>
    <div id="layoutSidenav">
        <%- include('../partials/global/sidebar.ejs')%>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container pt-2">
                        <a class="btn btn-warning" href="/api/home/">Back</a>
                        <div class="d-flex justify-content-between mt-2 mb-2">
                            <h2>Courses</h2>
                            <div> <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#add-course">Add</a>
                            </div>
                        </div>

                        <%- include('./partials/add_course') %>
                    </div>
                    <div class="container">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-dark">
                                    <tr class="text-center">
                                        <th>#</th>
                                        <th>Cover</th>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Enabled</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    <% courses.map((course,index)=>{ %>
                                        <tr>
                                            <td>
                                                <%=index+1%>
                                            </td>
                                            <td><img src="http://localhost:5000/<%=course.thumbnail%>" height="60px"
                                                    width="120px" alt="">
                                            </td>
                                            <td>
                                                <%=course.title%>
                                            </td>
                                            <td>
                                                <%=course.category.title%>
                                            </td>
                                            <td>
                                                <%=course.enabled%>
                                            </td>
                                            <td>
                                                <%=course.price%>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="d-flex flex-row">
                                                        <a href="/api/course/<%=course._id%>"
                                                            class="btn btn-primary btn-sm m-1">Edit</a>

                                                        <!-- <a href="/api/course/edit/reviews/<%=course._id%>"
                                                            class="btn btn-warning btn-sm  m-1">Reviews</a> -->
                                                        <button class=" btn btn-danger  btn-sm   m-1"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#a<%=course._id%>">Delete</button>

                                                    </div>

                                                </div>
                                            </td>
                                        </tr>
 <!-- delete -->

 <div class="modal fade" id="a<%=course._id%>" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure to delete index: <%=index+1%> [<%=course.title%>]
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                    data-bs-dismiss="modal">Close</button>
                <form action="/api/lecture/?_method=DELETE"
                    method="POST">
                    <input type="hidden" value="<%=course._id%>" name="id" />
                    <button type="submit" class="btn btn-danger">Delete
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>
                                        <% }) %>



                                </tbody>
                            </table>
                        </div>
                    </div>


                </main>
            </div>
    </div>